<h1>Group Video Chat</h1>
<div id="controls">
    <input type="text" id="roomInput" placeholder="Room name" />
    <button id="joinBtn">Join Room</button>
</div>
<button id="toggle-mic">Toggle Microphone</button>
<button id="toggle-camera">Toggle Camera</button>
<button id="share-screen">Share Screen</button>
<div id="localContainer" class="media-container">
    <video id="localVideo" autoplay muted playsinline></video>
    <canvas id="placeholderCanvas" width="300" height="225" style="display:none;"></canvas>
    <img id="placeholderImg" src="~/favicon.ico" style="display:none;" />
</div>
<div id="remoteVideos"></div>

<!-- SignalR client library (from CDN) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js"></script>
<script src="~/js/call.js"></script>